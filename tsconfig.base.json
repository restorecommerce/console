{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@console-core/config": ["packages/core/config/src/index.ts"],
      "@console-core/graphql": ["packages/core/graphql/src/index.ts"],
      "@console-core/types": ["packages/core/types/src/index.ts"],
      "@console-modules/authn": ["packages/modules/authn/src/index.ts"],
      "@console-modules/home": ["packages/modules/home/src/index.ts"],
      "@console-modules/layout": ["packages/modules/layout/src/index.ts"],
      "@console-modules/management": [
        "packages/modules/management/src/index.ts"
      ],
      "@console-modules/overflow": ["packages/modules/overflow/src/index.ts"],
      "@console-modules/private": ["packages/modules/private/src/index.ts"],
      "@console-modules/profile": ["packages/modules/profile/src/index.ts"],
      "@console-modules/public": ["packages/modules/public/src/index.ts"],
      "@console-modules/shared": ["packages/modules/shared/src/index.ts"],
      "@console-modules/store": ["packages/core/store/src/index.ts"],
      "@console-modules/ui": ["packages/modules/ui/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
