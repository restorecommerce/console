{
  "overwrite": true,
  "schema": "https://api.restorecommerce.io/graphql",
  "generates": {
    "libs/core/graphql/codegen/src/lib/generated/generated.ts": {
      "config": {
        "addExplicitOverride": true,
        "declarationKind": "interface",
        "defaultScalarType": "unknown"
      },
      "documents": "libs/core/graphql/{mutations,queries}/**/*.graphql",
      "hooks": {
        "afterOneFileWrite": ["pretty-quick"]
      },
      "plugins": [
        "typescript",
        "typescript-operations",
        "typescript-apollo-angular"
      ]
    }
  }
}
